<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLMainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChooseFileActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="103dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="@string/texto_de_archivo_seleccionado"
        android:textDirection="firstStrongRtl"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/TVSeleccionarArchivo"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/BAbrirArchivo"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:hint="@string/hint_texto_de_archivo_seleccionado"
        android:textSize="24sp" />

    <Button
        android:id="@+id/BAbrirArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TVSeleccionarArchivo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="61dp"
        android:fontFamily="@font/fredoka_one"
        android:text="@string/boton_abrir_archivo" />

    <Button
        android:id="@+id/BCargarObra"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BAbrirArchivo"
        android:layout_alignStart="@id/TVSeleccionarArchivo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="221dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/fredoka_one"
        android:text="@string/boton_abrir_obra"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="-33dp"
        android:layout_toStartOf="@+id/TVSeleccionarArchivo"
        android:fontFamily="@font/fredoka_one"
        android:text="Nombre:"
        android:textSize="18sp" />
</RelativeLayout>