<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    tools:context=".Acciones.AccionCorrer">

    <Button
        android:id="@+id/btn_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_h3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/fredoka_one"
        android:text="pupitre propio"
        android:textSize="18sp"
        android:background="@drawable/style_button"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="¿Hacia dónde quieres que corra el personaje?​"
        android:textSize="18sp"
/>

    <Button
        android:id="@+id/btn_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_h1"
        android:layout_alignStart="@id/btn_h1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/fredoka_one"
        android:text="puerta"
        android:textSize="18sp"
        android:background="@drawable/style_button"/>

    <Button
        android:id="@+id/btn_h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_h2"
        android:layout_alignStart="@id/btn_h1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/fredoka_one"
        android:text="espacio"
        android:textSize="18sp"
        android:background="@drawable/style_button"/>

    <Button
        android:id="@+id/btn_h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignStart="@id/btn_h1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Tablero"
        android:textSize="18sp"
        android:background="@drawable/style_button"/>

    <EditText
        android:id="@+id/btn_h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_toStartOf="@+id/textHacia"
        android:layout_toEndOf="@id/textDesde"
        android:fontFamily="@font/fredoka_one" />

    <TextView
        android:id="@+id/textDesde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignBottom="@id/btn_h4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="Desde: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textHacia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignBottom="@id/btn_h4"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/btn_h3"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="Hacia:"
        android:textSize="18sp" />
</RelativeLayout>